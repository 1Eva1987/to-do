<%- include("header") -%>
<p><%= date %></p>
<h1><%=listTitle%></h1>
<div class="list-container"> 
    <ul class="list" > 
    <% newListItems.forEach((item)=>{ %>
       <% if(item === ""){ %>
           <% return%>
       <% }else{ %>
        <form action="/delete" method="post">
            <div class="li-item">
                <input name = "checkbox" value="<%= item._id%>" type="checkbox" onChange="this.form.submit()">
                <li> <%= item.name %> </li> 
            </div>
            <input type="hidden" name = "listName" value = "<%= listTitle %>">
        </form>
        <%}%>
    <%})%>
    </ul>
</div>
    <form action="/" method="post">
    <div class="form-create">
        <input type="text" name="newItem"  placeholder="Make a note...">
        <button type="submit" class="btn" name="list" value=<%= listTitle %>>Save</button>
        </div>
    </form>

    <%- include("footer") -%>