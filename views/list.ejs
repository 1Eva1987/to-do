<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To Do</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <% if (day.includes("Saturday") || day.includes("Sunday")){ %>
        <h1 style="color: #800080"><%= day %></h1>
    <% } else { %>
        <h1 style="color : darkslategray"><%= day %></h1>
    <%}%>

    <% newListItems.map((item)=>{ %>
       <% if(item === ""){ %>
           <% return%>
       <% }else{ %>
        <li> <%= item %> </li> 
        <%}%>
    <%})%>

<form action="/" method="post">
    <input type="text" name="newItem"  placeholder="Make a note...">
    <button type="submit" class="btn" name="button">Save</button>
</form>
</body>
</html>